{
  "name": "ai-react",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run index.ts",
    "format": "prettier --write .",
    "prepare": "husky",
    "start": "concurrently -n server,client -c green,cyan \"bun --cwd packages/server run dev\" \"bun --cwd packages/client run dev\"",
    "dev:server": "bun --cwd packages/server run dev",
    "dev:client": "bun --cwd packages/client run dev"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "prisma": "^6.16.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "dotenv": "^17.2.2",
    "react-hook-form": "^7.63.0",
    "react-icons": "^5.5.0"
  }
}
